@model IotaWebApp.Models.WebsiteContent

<h2>Delete Content</h2>

<p>Are you sure you want to delete this content?</p>

<div>
    <h4>@Model.ContentKey</h4>
    <p>@Model.ContentValue</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()  <!-- Ensure anti-forgery token is included -->
    <input type="hidden" asp-for="Id" />  <!-- Correctly bind to Id of the model -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
