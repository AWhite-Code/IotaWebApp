@model IEnumerable<IotaWebApp.Models.WebsiteContent>

<h2>Manage Website Content</h2>

<a asp-action="Create" class="btn btn-success">Add New Content</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Content Key</th>
            <th>Content Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContentKey</td>
                <td>@item.ContentValue</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <!-- Add a Delete button with a confirmation dialog -->
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
