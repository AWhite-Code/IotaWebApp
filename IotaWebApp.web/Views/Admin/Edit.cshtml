@model IotaWebApp.Models.WebsiteContent

<h2>Edit Content</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <!-- Enable file upload -->
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ContentKey"></label>
        <input asp-for="ContentKey" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ContentValue"></label>
        <textarea asp-for="ContentValue" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="file">Upload New Image</label>
        <input type="file" class="form-control" name="file" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
