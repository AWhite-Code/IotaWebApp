@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Home";
}

<!-- Grid Container for Main Content -->
<div class="grid-container fluid">
    <!-- Grid X for Carousel -->
    <div class="grid-x grid-margin-x align-center">
        <!-- Carousel Container in a Grid Cell -->
        <div class="cell small-12 large-10">
            <!-- Large screens: 10 columns wide, small screens: full width -->
            <div class="carousel-container">
                <!-- Slick Slider Content -->
                <div class="carousel">
                    <!-- Corrected Image Path for First Slide -->
                    <div>
                        <img src="~/Assets/image4.png" alt="Image 4" /> <!-- First image from Assets folder -->
                    </div>
                    <div>
                        <img src="https://via.placeholder.com/800x400?text=Slide+2" alt="Slide 2" />
                    </div>
                    <div>
                        <img src="https://via.placeholder.com/800x400?text=Slide+3" alt="Slide 3" />
                    </div>
                    <div>
                        <img src="https://via.placeholder.com/800x400?text=Slide+4" alt="Slide 4" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reference Local CSS Files for Slick Carousel -->
<link href="~/lib/slick-carousel/slick.css" rel="stylesheet" />
<link href="~/lib/slick-carousel/slick-theme.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/slick-carousel/slick.min.js"></script>

<!-- Initialize Foundation and Slick Slider -->
<script src="~/lib/foundation/js/foundation.min.js"></script>
<script>
    $(document).foundation(); // Initialize Foundation

    $(document).ready(function () {
        if (typeof $ === 'undefined') {
            console.error('jQuery is not loaded correctly.');
        } else {
            console.log('jQuery is loaded.');

            if ($('.carousel').length > 0) {
                console.log('Carousel element found. Initializing Slick slider...');
                $('.carousel').slick({
                    dots: true,
                    infinite: true,
                    speed: 500,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    arrows: true, // Enable arrow buttons
                    prevArrow: '<button type="button" class="slick-prev">Previous</button>',
                    nextArrow: '<button type="button" class="slick-next">Next</button>'
                }).on('init', function (event, slick) {
                    console.log('Slick slider initialized.');
                }).on('setPosition', function (event, slick) {
                    console.log('Slick slider set position.');
                });
            } else {
                console.error('Carousel element not found.');
            }
        }
    });
</script>
