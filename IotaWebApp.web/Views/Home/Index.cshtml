@{
    ViewData["Title"] = "Home";
}

<!-- Full-Width Hero Section and Carousel -->
<div class="full-screen-width">
    <div class="carousel">
        <!-- Your Hero Image -->
        <div>
            <img src="~/Assets/image4.png" alt="Hero Image" class="hero-image" />
            <!-- Caption for Centered Text -->
            <div class="carousel-caption">
                <h1>Creating Exceptional Workspaces</h1>
            </div>
            <!-- New Div for Button -->
            <div class="carousel-button">
                <a href="#" class="button">Explore Our Work</a>
            </div>
        </div>
        <!-- Placeholder Image 1 -->
        <div>
            <img src="https://via.placeholder.com/1920x1080?text=Slide+2" alt="Placeholder Image 1" class="hero-image" />
        </div>
        <!-- Placeholder Image 2 -->
        <div>
            <img src="https://via.placeholder.com/1920x1080?text=Slide+3" alt="Placeholder Image 2" class="hero-image" />
        </div>
        <!-- Placeholder Image 3 -->
        <div>
            <img src="https://via.placeholder.com/1920x1080?text=Slide+4" alt="Placeholder Image 3" class="hero-image" />
        </div>
    </div>
</div>

<!-- Initialize Slick Slider and Foundation -->
<script>
    $(document).foundation();
    $('.carousel').slick({
        dots: true,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: 'linear'
    });
</script>
