@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Iota Web App</title>

    <!-- Include Foundation CSS -->
    <link rel="stylesheet" href="~/lib/foundation/css/foundation.min.css" />

    <!-- Include Slick Carousel CSS -->
    <link href="~/lib/slick-carousel/slick.css" rel="stylesheet" />
    <link href="~/lib/slick-carousel/slick-theme.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="top-bar-left">
            <!-- Logo Image -->
            <img src="~/Assets/logo.png" alt="Iota Logo" class="iota-logo" style="height: 50px; padding: 10px;" />
        </div>

        <div class="top-bar-right">
            <!-- Menu Items Aligned to the Right -->
            <ul class="menu align-right">
                <!-- Menu Buttons -->
                <li><a href="#" class="home-button">Home</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Sustainability</a></li>
                <li><a href="#">Our Work</a></li>
                <li><a href="#">Resources</a></li>
                <li><a href="#">About IOTA</a></li>
                <li><a href="#">Get in Touch</a></li>
                <!-- Search Icon -->
                <li><a href="#"><img src="~/Assets/search.png" alt="Search" style="height: 30px; width: 30px;" /></a></li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid-container fluid">
        <!-- Render the main content of each page -->
        @RenderBody()
    </div>

    <!-- Optional Footer -->
    <!-- Scripts Section -->
    @RenderSection("Scripts", required: false)

    <!-- Include jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Include Slick Carousel JavaScript -->
    <script src="~/lib/slick-carousel/slick.min.js"></script>

    <!-- Include Foundation JS -->
    <script src="~/lib/foundation/js/foundation.min.js"></script>

    <!-- Initialize Foundation -->
    <script>
        $(document).foundation(); // Initialize Foundation
    </script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
