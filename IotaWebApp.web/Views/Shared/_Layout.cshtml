<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IotaWebApp.web</title>

    <!-- Include Foundation CSS -->
    <link rel="stylesheet" href="~/lib/foundation/css/foundation.min.css" />
    <link rel="stylesheet" href="~/lib/foundation/css/foundation-float.min.css" />

    <!-- Include Slick CSS -->
    <link rel="stylesheet" href="~/lib/slick-carousel/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-carousel/slick/slick-theme.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IotaWebApp.web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="top-bar">
            <div class="top-bar-left">
                <ul class="dropdown menu" data-dropdown-menu>
                    <li class="menu-text"><a asp-area="" asp-page="/Index">IotaWebApp.web</a></li>
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-area="" asp-page="/Privacy">Privacy</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="grid-container">
        <main role="main" class="grid-x grid-padding-x pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="grid-container">
        <div class="grid-x grid-padding-x border-top footer text-muted">
            <div class="cell">
                &copy; 2024 - IotaWebApp.web - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <!-- Include jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>

    <!-- Include Foundation JS -->
    <script src="~/lib/foundation/js/foundation.min.js"></script>

    <!-- Include Slick JS -->
    <script src="~/lib/slick-carousel/slick/slick.min.js"></script>

    <!-- Initialize Foundation and Slick JS -->
    <script>
        $(document).foundation(); // Initialize Foundation
        $('.your-slider-class').slick(); // Initialize Slick JS; replace '.your-slider-class' with your actual class
    </script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
